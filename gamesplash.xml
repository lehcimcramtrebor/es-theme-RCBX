<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>
	<view name="splash">
		<splash name="splash">
			<backgroundColor>121212</backgroundColor>
		</splash>
		<image name="background">
			<linearSmooth>true</linearSmooth>
			<path>./_rcbxCustom/gamesplash.png</path>
			<path ifArch="windows">./../../../../_rcbxCustom/gamesplash.png</path>
			<path ifNotArch="windows">./../../_rcbxCustom/gamesplash.png</path>
			<maxSize>1 1</maxSize>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
		</image>		
		<text name="label">
			<forceUppercase>true</forceUppercase>    
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<alignment>center</alignment>
			<color>cccccc</color>
			<fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
			<fontSize>0.036</fontSize>
			<glowColor>000000ef</glowColor>
			<glowSize>1</glowSize>
			<glowOffset>1</glowOffset>
		</text>
	</view>
</theme>
