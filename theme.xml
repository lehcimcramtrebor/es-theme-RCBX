<?xml version="1.0" encoding="UTF-8"?>
<!--RCBX theme for Retrobat / Batocera / Emuelec inspired by recalbox theme.
by Helmic.-->
<theme>
	<formatVersion>7</formatVersion>
	
	<!--variable to display region first-->
	<variables region="eu">	<v.region> </v.region> </variables>
	
	<!--localisation-->
	<include>./_inc/local.xml</include>
	<include>./_inc/local-${lang}.xml</include>

	<!--support-->
	<include>./_support/support.xml</include>
	
	<!--subsets-->
    <subset name="music" displayName="${lang.music}">
        <include name="useOldBatoceraMusic" displayName="${lang.useOldBatoceraMusic}">./_inc/useOldBatoceraMusic.xml</include>
        <include name="useRecalboxMusic" displayName="${lang.useRecalboxMusic}">./_inc/useRecalboxMusic.xml</include>
        <include name="useComixZoneMusic" displayName="${lang.useComixZoneMusic}">./_inc/useComixZoneMusic.xml</include>
        <include name="useRetrobatMusic" displayName="${lang.useRetrobatMusic}">./_inc/useRetrobatMusic.xml</include>
        <include name="allowGeneral" displayName="${lang.allowGeneral}"/>
        <include name="notAllowMusic" displayName="${lang.notAllowMusic}">./_inc/notAllowMusic.xml</include>
	</subset>
     <subset name="mode" displayName="${lang.mode}">
        <include name="transparent" displayName="${lang.transparent}"/>
        <include name="plain" displayName="${lang.plain}"/>
        <include name="translucent" displayName="${lang.translucent}"/>
    </subset>
	<subset name="randomVideos" displayName="${lang.randomVideos}">
        <include name="inFrame" displayName="${lang.inFrame}">./_inc/randomVideo.xml</include>
        <include name="onWall" displayName="${lang.onWall}">./_inc/randomVideo.xml</include>
        <include name="fullScreen" displayName="${lang.fullScreen}">./_inc/randomVideo.xml</include>
        <include name="onlyAudio" displayName="${lang.onlyAudio}">./_inc/randomVideo.xml</include>
        <include name="no" displayName="${lang.no}"/>
    </subset>
	<subset name="randomShader" displayName="${lang.randomShader}">
        <include name="yes" displayName="${lang.yes}"/>
        <include name="no" displayName="${lang.no}"/>
    </subset>
    <subset name="randomVideosAudio" displayName="${lang.randomVideosAudio}" ifSubset="randomVideos:onlyAudio|inFrame|onWall|fullScreen">
        <include name="off" displayName="${lang.off}"/>
        <include name="on" displayName="${lang.on}"/>
   </subset>
    <subset name="backgroundFx" displayName="${lang.backgroundFx}">
        <include name="scanlines" displayName="${lang.scanlines}"/>
        <include name="scanlinesvertical" displayName="${lang.scanlinesvertical}"/>
        <include name="crt" displayName="${lang.crt}"/>
        <include name="phosphore" displayName="${lang.phosphore}"/>
        <include name="flat" displayName="${lang.flat}"/>
   </subset>
    <subset name="paintSystem" displayName="${lang.paintSystem}">
        <include name="yes" displayName="${lang.yes}"/>
        <include name="no" displayName="${lang.no}"/>
   </subset>
    <subset name="paintSystemForce" displayName="${lang.paintSystemForce}" ifSubset="paintSystem:yes">
        <include name="darkPaint" displayName="${lang.darkPaint}"/>
        <include name="softPaint" displayName="${lang.softPaint}"/>
        <include name="mediumPaint" displayName="${lang.mediumPaint}"/>
        <include name="vividPaint" displayName="${lang.vividPaint}"/>
        <include name="fadedPaint" displayName="${lang.fadedPaint}"/>
  </subset>
    <subset name="helpIcons" displayName="${lang.helpIcons}">
        <include name="defaultIcons" displayName="${lang.defaultIcons}"/>
        <include name="arcadeIcons" displayName="${lang.arcadeIcons}"/>
        <include name="psxIcons" displayName="${lang.psxIcons}"/>
        <include name="snesIcons" displayName="${lang.snesIcons}"/>
        <include name="snesAltIcons" displayName="${lang.snesAltIcons}"/>
        <include name="xboxIcons" displayName="${lang.xboxIcons}"/>
        <include name="xboxOneIcons" displayName="${lang.xboxOneIcons}"/>
    </subset>
    <subset name="extendedInfos" displayName="${lang.extendedInfos}">
        <include name="yes" displayName="${lang.yes}">./_inc/infos.xml</include>
        <include name="no" displayName="${lang.no}"/>
    </subset>
    <subset name="paintGamelist" displayName="${lang.paintGamelist}" appliesTo="detailed,grid">
        <include name="yes" displayName="${lang.yes}">./_inc/randomVideo.xml</include>
        <include name="no" displayName="${lang.no}"/>
    </subset>
    <subset name="paintGamelistForce" displayName="${lang.paintGamelistForce}" ifSubset="paintGamelist:yes" appliesTo="detailed,grid">
        <include name="darkPaint" displayName="${lang.darkPaint}"/>
        <include name="softPaint" displayName="${lang.softPaint}"/>
        <include name="mediumPaint" displayName="${lang.mediumPaint}"/>
        <include name="vividPaint" displayName="${lang.vividPaint}"/>
        <include name="fadedPaint" displayName="${lang.fadedPaint}"/>
   </subset>
   <subset name="mdVideosAudio" displayName="${lang.mdVideosAudio}" appliesTo="detailed,grid">
        <include name="off" displayName="${lang.off}"/>
        <include name="on" displayName="${lang.on}"/>
    </subset>
     <subset name="mdShader" displayName="${lang.mdShader}" appliesTo="detailed,grid">
        <include name="yes" displayName="${lang.yes}"/>
        <include name="no" displayName="${lang.no}"/>
    </subset>
    <subset name="metadatasFont" displayName="${lang.metadatasFont}" appliesTo="detailed,grid">
        <include name="auto" displayName="${lang.auto}"/>
        <include name="regular" displayName="${lang.regular}"/>
        <include name="regularBold" displayName="${lang.regularBold}"/>
        <include name="condensed" displayName="${lang.condensed}"/>
        <include name="condensedBold" displayName="${lang.condensedBold}"/>
    </subset>
    <subset name="metadatasFontSize" displayName="${lang.metadatasFontSize}" appliesTo="detailed,grid">
        <include name="auto" displayName="${lang.auto}"/>
        <include name="0.010"/>
        <include name="0.011"/>
        <include name="0.012"/>
        <include name="0.013"/>
        <include name="0.014"/>
        <include name="0.015"/>
        <include name="0.016"/>
        <include name="0.017"/>
        <include name="0.018"/>
        <include name="0.019"/>
        <include name="0.020"/>
        <include name="0.021"/>
        <include name="0.022"/>
        <include name="0.023"/>
        <include name="0.024"/>
        <include name="0.025"/>
    </subset>
    <subset name="descriptionFont" displayName="${lang.descriptionFont}" appliesTo="detailed,grid">
        <include name="auto" displayName="${lang.auto}"/>
        <include name="regular" displayName="${lang.regular}"/>
        <include name="regularBold" displayName="${lang.regularBold}"/>
        <include name="condensed" displayName="${lang.condensed}"/>
        <include name="condensedBold" displayName="${lang.condensedBold}"/>
    </subset>
    <subset name="descriptionFontSize" displayName="${lang.descriptionFontSize}" appliesTo="detailed,grid">
        <include name="auto" displayName="${lang.auto}"/>
        <include name="0.016"/>
        <include name="0.017"/>
        <include name="0.018"/>
        <include name="0.019"/>
        <include name="0.020"/>
        <include name="0.021"/>
        <include name="0.022"/>
        <include name="0.023"/>
        <include name="0.024"/>
        <include name="0.025"/>
        <include name="0.026"/>
        <include name="0.027"/>
        <include name="0.028"/>
        <include name="0.029"/>
        <include name="0.030"/>
        <include name="0.031"/>
        <include name="0.032"/>
    </subset>
    <subset name="gamelistFont" displayName="${lang.gamelistFont}" appliesTo="basic,detailed">
        <include name="auto" displayName="${lang.auto}"/>
        <include name="regular" displayName="${lang.regular}"/>
        <include name="regularBold" displayName="${lang.regularBold}"/>
        <include name="condensed" displayName="${lang.condensed}"/>
        <include name="condensedBold" displayName="${lang.condensedBold}"/>
    </subset>
    <subset name="gamelistFontSize" displayName="${lang.gamelistFontSize}" appliesTo="basic,detailed">
        <include name="auto" displayName="${lang.auto}"/>
        <include name="0.022"/>
        <include name="0.023"/>
        <include name="0.024"/>
        <include name="0.025"/>
        <include name="0.026"/>
        <include name="0.027"/>
        <include name="0.028"/>
        <include name="0.029"/>
        <include name="0.030"/>
        <include name="0.031"/>
        <include name="0.032"/>
        <include name="0.033"/>
        <include name="0.034"/>
        <include name="0.035"/>
        <include name="0.036"/>
        <include name="0.037"/>
        <include name="0.038"/>
        <include name="0.039"/>
        <include name="0.040"/>
    </subset>
    <subset name="gamelistLines" displayName="${lang.gamelistLines}" appliesTo="basic,detailed">
        <include name="auto" displayName="${lang.auto}"/>
        <include name="9"/>
        <include name="11"/>
        <include name="13"/>
        <include name="15"/>
        <include name="17"/>
        <include name="19"/>
        <include name="21"/>
        <include name="23"/>
    </subset>
	
	<!--parts-->
	<include>./_inc/clock.xml</include>
	<include>./_inc/controllerActivity.xml</include>
	<include>./_inc/batteryIndicator.xml</include>
	<include>./_inc/menu.xml</include>
	<include>./_inc/help.xml</include>
	<include>./_inc/systemcarousel.xml</include>
	<include>./_inc/systemInfo.xml</include>
	<include>./_inc/logoText.xml</include>
	<include>./_inc/logo.xml</include>
	<include>./_inc/background.xml</include>
	<include>./_inc/bands.xml</include>
	<include>./_inc/enter.xml</include>
	<include>./_inc/basic.xml</include>
	<include>./_inc/commons.xml</include>
	<include>./_inc/detailed.xml</include>
	<include>./_inc/grid.xml</include>

	<!--themes specifics properties-->
	<include>./_inc/specifics/${system.theme}.xml</include>
</theme>
