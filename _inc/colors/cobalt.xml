<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<variables>
		<!--themable colors-->
		<c.text>ccccce</c.text>

		<c.textHeader>8080ee</c.textHeader>

		<c.menuSelector>404060</c.menuSelector>
		<ce.menuSelector>303050</ce.menuSelector>

		<c.scroll>30305080</c.scroll>

			<!--frames colors-->
			<c.framePlain>202028ef</c.framePlain>

			<c.frameTransparent>10101880</c.frameTransparent>
			<ce.frameTransparent>20202880</ce.frameTransparent>

			<c.frameTranslucent>10101866</c.frameTranslucent>
			<ce.frameTranslucent>20202866</ce.frameTranslucent>

			<!--menu background color-->
			<c.menubg>202028</c.menubg>
	</variables>
	<include>./fixedColors.xml</include>
	<subset name="frameColorset" tinyScreen="false" displayName="${category.interface} • ${lang.frameColorset}">
        <include name="no" displayName="${lang.no}">./frameColors.xml</include>
        <include name="yes" displayName="${lang.yes}"/>
    </subset>
	<subset name="frameColorset" tinyScreen="true" displayName="${category.interface} • ${lang.frameColorset}">
        <include name="yes" ifSubset="tiny:handheld" displayName="${lang.yes}"/>
        <include name="no" displayName="${lang.no}">./frameColors.xml</include>
        <include name="yes" ifSubset="tiny:crt" displayName="${lang.yes}"/>
    </subset>
</theme>
