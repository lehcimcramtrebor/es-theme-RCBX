<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<variables>
		<!--themable colors-->
		<c.text>cecccc</c.text>

		<c.textHeader>ff3535</c.textHeader>

		<c.menuSelector>801515</c.menuSelector>
		<ce.menuSelector>700505</ce.menuSelector>

		<c.scroll>70050580</c.scroll>

			<!--frames colors-->
			<c.framePlain>282020ef</c.framePlain>

			<c.frameTransparent>18101080</c.frameTransparent>
			<ce.frameTransparent>28202080</ce.frameTransparent>

			<c.frameTranslucent>18101066</c.frameTranslucent>
			<ce.frameTranslucent>28202066</ce.frameTranslucent>

			<!--menu background color-->
			<c.menubg>282020</c.menubg>
	</variables>
	<include>./fixedColors.xml</include>
	<subset name="frameColorset" tinyScreen="false" displayName="${category.interface} • ${lang.frameColorset}">
        <include name="no" displayName="${lang.no}">./frameColors.xml</include>
        <include name="yes" displayName="${lang.yes}"/>
    </subset>
	<subset name="frameColorset" tinyScreen="true" displayName="${category.interface} • ${lang.frameColorset}">
        <include name="yes" ifSubset="tiny:handheld" displayName="${lang.yes}"/>
        <include name="no" displayName="${lang.no}">./frameColors.xml</include>
        <include name="yes" ifSubset="tiny:crt" displayName="${lang.yes}"/>
    </subset>
</theme>
