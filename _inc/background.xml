<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<view name="system,basic,detailed,grid,gamecarousel">
		<image name="background" extra="true">
			<zIndex>100</zIndex>
			<path ifSubset="backgroundFx:flat">./background/flat.jpg</path>
			<path ifSubset="backgroundFx:scanlines">./background/scanlines.jpg</path>
			<path ifSubset="backgroundFx:scanlinesvertical">./background/scanlinesVertical.jpg</path>
			<path ifSubset="backgroundFx:crt">./background/crt.jpg</path>
			<path ifSubset="backgroundFx:phosphore">./background/phosphore.jpg</path>
			<size>1 1</size>
			<tile>true</tile>
			<gradientType>vertical</gradientType>
		</image>
	</view>
	<view name="system">
		<image name="background" extra="true">
            <color>505050</color>
            <colorEnd>202020</colorEnd>
            <color ifSubset="backgroundFx:flat,paintSystem:no">202020</color>
            <colorEnd ifSubset="backgroundFx:flat,paintSystem:no">202020</colorEnd>
		</image>
		<image name="paintSystem" ifSubset="paintSystem:yes" extra="true">
			<path>{random:fanart}</path>
			<path>./../_rcbxCustom/paints/${system.theme}.jpg</path>
			<path ifArch="windows">./../../../../_rcbxCustom/paints/${system.theme}.jpg</path>
			<path ifNotArch="windows">./../../_rcbxCustom/paints/${system.theme}.jpg</path>
			<path>./../_rcbxCustom/paints/${system.theme}.png</path>
			<path ifArch="windows">./../../../../_rcbxCustom/paints/${system.theme}.png</path>
			<path ifNotArch="windows">./../../_rcbxCustom/paints/${system.theme}.png</path>
			<linearSmooth>true</linearSmooth>
			<zIndex>101</zIndex>
			<pos>0 0</pos>
			<maxSize>99 1</maxSize>
			<origin>0 0</origin>
			<gradientType>horizontal</gradientType>
			<color>80808080</color>
			<colorEnd>00000000</colorEnd>
			<color ifSubset="paintSystemForce:darkPaint">cccccc80</color>
			<colorEnd ifSubset="paintSystemForce:darkPaint">00000000</colorEnd>
			<color ifSubset="paintSystemForce:softPaint">cccccc80</color>
			<colorEnd ifSubset="paintSystemForce:softPaint">80808003</colorEnd>
			<color ifSubset="paintSystemForce:mediumPaint">eeeeee90</color>
			<colorEnd ifSubset="paintSystemForce:mediumPaint">90909010</colorEnd>
			<saturation ifSubset="paintSystemForce:mediumPaint">1.05</saturation>
			<color ifSubset="paintSystemForce:vividPaint">ffffff99</color>
			<colorEnd ifSubset="paintSystemForce:vividPaint">ffffff10</colorEnd>
			<saturation ifSubset="paintSystemForce:vividPaint">1.1</saturation>
			<opacity>0</opacity>
			<storyboard>
				<animation property="opacity" to="1" mode="easeIn" duration="250" begin="0"/>
			</storyboard>
			<visible ifSubset="randomVideos:onWall">false</visible>
		</image>
	</view>
	<view name="basic,detailed,grid,gamecarousel">
		<image name="background" extra="true">
            <color>202020</color>
            <colorEnd>505050</colorEnd>
            <color ifSubset="paintGamelist:yes">505050</color>
            <colorEnd ifSubset="paintGamelist:yes">202020</colorEnd>
            <color ifSubset="backgroundFx:flat">202020</color>
            <colorEnd ifSubset="backgroundFx:flat">202020</colorEnd>
		</image>
	</view>
	<view name="detailed,grid,gamecarousel">
		<image name="md_fanart" ifSubset="paintGamelist:yes">
			<linearSmooth>true</linearSmooth>
			<zIndex>101</zIndex>
			<pos>0 0</pos>
			<maxSize>99 1</maxSize>
			<origin>0 0</origin>
			<gradientType>horizontal</gradientType>
			<color>80808080</color>
			<colorEnd>00000000</colorEnd>
			<color ifSubset="paintGamelistForce:darkPaint">cccccc80</color>
			<colorEnd ifSubset="paintGamelistForce:darkPaint">00000000</colorEnd>
			<color ifSubset="paintGamelistForce:softPaint">cccccc80</color>
			<colorEnd ifSubset="paintGamelistForce:softPaint">80808003</colorEnd>
			<color ifSubset="paintGamelistForce:mediumPaint">eeeeee90</color>
			<colorEnd ifSubset="paintGamelistForce:mediumPaint">90909010</colorEnd>
			<saturation ifSubset="paintGamelistForce:mediumPaint">1.05</saturation>
			<color ifSubset="paintGamelistForce:vividPaint">ffffff99</color>
			<colorEnd ifSubset="paintGamelistForce:vividPaint">ffffff10</colorEnd>
			<saturation ifSubset="paintGamelistForce:vividPaint">1.1</saturation>
			<opacity>0</opacity>
			<storyboard event="open">
				<animation property="opacity" to="1" mode="easeIn" duration="250" begin="0"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" to="1" mode="easeIn" duration="250" begin="350"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" to="1" mode="easeIn" duration="250" begin="350"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" to="0" mode="linear" duration="1"/>
			</storyboard>
			<storyboard event="deactivateNext">
				<animation property="opacity" to="0" mode="linear" duration="1"/>
			</storyboard>
			<visible ifSubset="paintGamelist:custom">false</visible>
		</image>
	</view>
	<view name="basic,detailed,grid,gamecarousel">
		<image name="paintGamelist" ifSubset="paintGamelist:custom" extra="true">
			<path>./../_rcbxCustom/paints/${system.theme}.jpg</path>
			<path ifArch="windows">./../../../../_rcbxCustom/paints/${system.theme}.jpg</path>
			<path ifNotArch="windows">./../../_rcbxCustom/paints/${system.theme}.jpg</path>
			<path>./../_rcbxCustom/paints/${system.theme}.png</path>
			<path ifArch="windows">./../../../../_rcbxCustom/paints/${system.theme}.png</path>
			<path ifNotArch="windows">./../../_rcbxCustom/paints/${system.theme}.png</path>
			<linearSmooth>true</linearSmooth>
			<zIndex>101</zIndex>
			<pos>0 0</pos>
			<maxSize>99 1</maxSize>
			<origin>0 0</origin>
			<gradientType>horizontal</gradientType>
			<color>80808080</color>
			<colorEnd>00000000</colorEnd>
			<color ifSubset="paintGamelistForce:darkPaint">cccccc80</color>
			<colorEnd ifSubset="paintGamelistForce:darkPaint">00000000</colorEnd>
			<color ifSubset="paintGamelistForce:softPaint">cccccc80</color>
			<colorEnd ifSubset="paintGamelistForce:softPaint">80808003</colorEnd>
			<color ifSubset="paintGamelistForce:mediumPaint">eeeeee90</color>
			<colorEnd ifSubset="paintGamelistForce:mediumPaint">90909010</colorEnd>
			<saturation ifSubset="paintGamelistForce:mediumPaint">1.05</saturation>
			<color ifSubset="paintGamelistForce:vividPaint">ffffff99</color>
			<colorEnd ifSubset="paintGamelistForce:vividPaint">ffffff10</colorEnd>
			<saturation ifSubset="paintGamelistForce:vividPaint">1.1</saturation>
			<opacity>0</opacity>
			<storyboard>
				<animation property="opacity" to="1" mode="easeIn" duration="250" begin="0"/>
			</storyboard>
		</image>
	</view>
</theme>
