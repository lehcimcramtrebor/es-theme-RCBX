<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<view name="basic,detailed,grid,gamecarousel" ifSubset="gamelistFrames:fullScreen">
		<image name="frame" extra="true">
			<zIndex ifSubset="paintGamelist:yes|custom">190</zIndex>
			<size>1 1</size>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<roundCorners>0</roundCorners>
		</image>
		<image name="frame" extra="true" ifSubset="paintGamelist:yes|custom">
			<opacity ifSubset="mode:plain">0.95</opacity>
			<opacity ifSubset="mode:transparent">0.85</opacity>
			<opacity ifSubset="mode:translucent">0.5</opacity>
		</image>
		<image name="frame2" extra="true">
			<visible>false</visible>
		</image>
		<image name="band1,band2,band3,band4" extra="true">
			<opacity ifSubset="paintGamelist:yes|custom">0.18</opacity>
		</image>
</view>

	<view name="basic,detailed,grid,gamecarousel" ifSubset="gamelistFrames:yes">
		<image name="frame" extra="true">
			<size>0.95 0.78</size>
			<pos>0.5 0.54</pos>
			<origin>0.5 0.5</origin>
		</image>
</view>
	<view name="basic,detailed,grid" ifSubset="gamelistFrames:yes">
		<image name="frame" extra="true">
			<size>0.95 0.78</size>
			<pos>0.5 0.54</pos>
			<origin>0.5 0.5</origin>
		</image>
		<image name="frame2" extra="true">
			<visible>false</visible>
		</image>
</view>
</theme>
