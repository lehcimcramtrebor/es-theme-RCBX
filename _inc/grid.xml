<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<view name="grid">
		<image name="illustration" extra="true">
			<origin>1 1</origin>
			<pos>0.78 0.14</pos>
			<maxSize>0.16 0.13</maxSize>
		</image>
		<image name="illustration" extra="true" ifSubset="centerGamelistLogos:yes">
			<origin>0 1</origin>
			<pos>0.027 0.14</pos>
			<maxSize>0.16 0.09</maxSize>
		</image>
		<image name="logo">
			<pos>0.22 0.14</pos>
			<maxSize>0.16 0.09</maxSize>
			<origin>0.5 1</origin>
		</image>
		<image name="logo" ifSubset="centerGamelistLogos:yes">
			<pos>0.5 0.075</pos>
			<maxSize>0.3 0.13</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		<imagegrid name="gamegrid">
			<zIndex>1001</zIndex>
            <pos>0.025 0.15</pos>
            <size>0.39 0.78</size>
			<scrollSound>./sounds/scroll.wav</scrollSound>
			<scrollSound>./../_rcbxCustom/scrollSounds/grid.wav</scrollSound>
			<scrollSound>./../_rcbxCustom/scrollSounds/${system.theme}.wav</scrollSound>
			<scrollSound ifArch="windows">./../../../../../_rcbxCustom/scrollSounds/grid.wav</scrollSound>
			<scrollSound ifArch="windows">./../../../../../_rcbxCustom/scrollSounds/${system.theme}.wav</scrollSound>
			<scrollSound ifNotArch="windows">./../../_rcbxCustom/scrollSounds/grid.wav</scrollSound>
			<scrollSound ifNotArch="windows">./../../_rcbxCustom/scrollSounds/${system.theme}.wav</scrollSound>
			<margin>0 0.0125</margin>
			<padding>0.0125 0.025 0.0125 0</padding>
			<autoLayout>2 2</autoLayout>
			<animateSelection>false</animateSelection>
			<centerSelection>false</centerSelection>
			<scrollbarColor>${c.scroll}</scrollbarColor>
			<scrollbarCorner>0</scrollbarCorner>
			<scrollbarSize>0.0025</scrollbarSize>
		</imagegrid>
		<gridtile name="default">
			<backgroundColor>20202033</backgroundColor>
			<backgroundCornerSize>9 9</backgroundCornerSize>
			<selectionMode>image</selectionMode>
			<padding>5 5</padding>
			<imageColor>cccccc</imageColor>
			<reflexion>0.02 0</reflexion>
  		</gridtile>
		<gridtile name="selected">
			<backgroundCenterColor>00000000</backgroundCenterColor>
			<backgroundEdgeColor>${c.textHeader}66</backgroundEdgeColor>
			<imageColor>ffffff</imageColor>
		</gridtile>
		<text name="gridtile">
			<color>ffffff80</color>
			<backgroundColor>00000000</backgroundColor>
			<fontSize>0.018</fontSize>
			<forceUppercase>true</forceUppercase>
			<fontPath>./fonts/CabinCondensed-Bold.ttf</fontPath>
			<alignment>center</alignment>
			<size>1 0.24</size>
		</text>
		<text name="gridtile:selected">
			<color>ffffff</color>
            <glowColor>00000080</glowColor>
			<glowOffset>1</glowOffset>
			<glowSize>1</glowSize>
		</text>
		<image name="gridtile.image">
			<linearSmooth>true</linearSmooth>
			<roundCorners>0.014</roundCorners>
		</image>  
		<ninepatch name="gridtile.background:selected">
			<animateColor>${c.textHeader}</animateColor>
			<animateColorTime>650</animateColorTime>
		</ninepatch>
        <text name="md_description">
			<color>${c.text}</color>
        </text>
		<image name="md_marquee">
			<reflexion>0.01 0</reflexion>
			<zIndex>1001</zIndex>
			<origin>1 1</origin>
            <pos>0.96 0.91</pos>
            <maxSize>0.155 0.31</maxSize>
			<storyboard event="open" repeatAt="5000">
				<animation property="opacity" from="0" mode="linear" duration="120"/>
				<animation property="offsetY" to="-0.025" mode="easeOutCubic" autoreverse="true" duration="250" begin="5000"/>
				<animation property="opacity" from="1" to="1" mode="linear" duration="9500" begin="5500"/>
			</storyboard>
			<storyboard event="activateNext" repeatAt="5000">
				<animation property="opacity" from="0" mode="linear" duration="120"/>
				<animation property="offsetY" from="0.005" mode="easeOut" duration="250"/>
				<animation property="offsetY" to="-0.025" mode="easeOutCubic" autoreverse="true" duration="250" begin="5000"/>
				<animation property="opacity" from="1" to="1" mode="linear" duration="9500" begin="5500"/>
			</storyboard>
			<storyboard event="activatePrev" repeatAt="5000">
				<animation property="opacity" from="0" mode="linear" duration="120"/>
				<animation property="offsetY" from="-0.005" mode="easeOut" duration="250"/>
				<animation property="offsetY" to="-0.025" mode="easeOutCubic" autoreverse="true" duration="250" begin="5000"/>
				<animation property="opacity" from="1" to="1" mode="linear" duration="9500" begin="5500"/>
			</storyboard>
			<storyboard event="deactivateNext">
				<animation property="opacity" to="0" mode="linear" duration="60"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" to="0" mode="linear" duration="60"/>
			</storyboard>
		</image>
	</view>
	<customView name="bigGrid" inherits="grid" displayName="${lang.bigGrid}">
		<image name="logo">
			<pos>0.027 0.14</pos>
			<maxSize>0.16 0.09</maxSize>
			<origin>0 1</origin>
		</image>
		<image name="logo" ifSubset="centerGamelistLogos:yes">
			<pos>0.5 0.075</pos>
			<maxSize>0.3 0.13</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		<image name="frame" extra="true">
			<zIndex>1000</zIndex>
			<tile>true</tile>
			<path>./parts/${n.frame}.png</path>
			<origin>0 0</origin>
            <pos>0.025 0.15</pos>
            <size>0.73 0.78</size>
			<color>${c.framePlain}</color>
			<color ifSubset="mode:transparent">${c.frameTransparent}</color>
			<colorEnd ifSubset="mode:transparent">${ce.frameTransparent}</colorEnd>
			<color ifSubset="mode:translucent">${c.frameTranslucent}</color>
			<colorEnd ifSubset="mode:translucent">${ce.frameTranslucent}</colorEnd>
			<gradientType ifSubset="mode:transparent|translucent">vertical</gradientType>
			<roundCorners>0.01</roundCorners>
		</image>
		<image name="frame2" extra="true">
			<zIndex>1000</zIndex>
			<tile>true</tile>
			<path>./parts/${n.frame}.png</path>
			<origin>0.5 0.5</origin>
            <pos>0.88 0.54</pos>
            <size>0.19 0.78</size>
			<color>${c.framePlain}</color>
			<color ifSubset="mode:transparent">${c.frameTransparent}</color>
			<colorEnd ifSubset="mode:transparent">${ce.frameTransparent}</colorEnd>
			<color ifSubset="mode:translucent">${c.frameTranslucent}</color>
			<colorEnd ifSubset="mode:translucent">${ce.frameTranslucent}</colorEnd>
			<gradientType ifSubset="mode:transparent|translucent">vertical</gradientType>
			<roundCorners>0.01</roundCorners>
		</image>
		<imagegrid name="gamegrid">
            <pos>0.025 0.15</pos>
            <size>0.73 0.78</size>
			<autoLayout>4 2</autoLayout>
		</imagegrid>
			<video name="md_video">
			<origin>0.5 0.5</origin>
			<pos>0.88 0.29</pos>
			<maxSize>0.16 0.24</maxSize>
		</video>
		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.88 0.29</pos>
			<maxSize>0.16 0.24</maxSize>
		</image>
		<image name="md_marquee">
			<origin>0.5 0.5</origin>
            <pos>0.88 0.495</pos>
            <maxSize>0.155 0.14</maxSize>
			<storyboard event="open">
				<animation property="opacity" from="0" mode="linear" duration="120"/>
				<animation property="opacity" from="1" to="1" mode="linear" duration="9500" begin="5500"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" mode="linear" duration="120"/>
				<animation property="offsetY" from="0.005" mode="easeOut" duration="250"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" mode="linear" duration="120"/>
				<animation property="offsetY" from="-0.005" mode="easeOut" duration="250"/>
			</storyboard>
			<storyboard event="deactivateNext">
				<animation property="opacity" to="0" mode="linear" duration="60"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" to="0" mode="linear" duration="60"/>
			</storyboard>
		</image>
        <text name="md_description">
			<reflexion>0.02 0</reflexion>
            <pos>0.8 0.63</pos>
            <size>0.16 0.275</size>
        </text>
		<image name="md_flag">
			<pos>0.8 0.605</pos>
		</image>

		<image name="ghost_flag" extra="true">
			<pos>0.80 0.605</pos>
		</image>
		<image name="md_manual,md_nomanual">
			<pos>0.825 0.605</pos>
		</image>
		
		<image name="ghost_manual" extra="true">
			<pos>0.825 0.605</pos>
		</image>
	
		<image name="md_savestate,md_nosavestate">
			<pos>0.84 0.605</pos>
		</image>

		<image name="ghost_savestate" extra="true">
			<pos>0.84 0.605</pos>
		</image>

		<image name="md_cheevos,md_notcheevos">
			<pos>0.855 0.605</pos>
		</image>
 		
		<image name="ghost_cheevos" extra="true">
			<pos>0.855 0.605</pos>
		</image>
	
		<image name="md_kidgame, md_notkidgame"> 
			<pos>0.87 0.605</pos>
		</image>

		<image name="ghost_kidgame" extra="true"> 
			<pos>0.87 0.605</pos>
		</image>

		<image name="md_hidden">
			<pos>0.885 0.605</pos>
		</image>

		<image name="ghost_hidden" extra="true">
			<pos>0.885 0.605</pos>
		</image>
        <text name="lbl_rating" extra="true">
            <visible>false</visible>
        </text>
        <rating name="md_rating">
            <pos>0.9475 0.593</pos>
        </rating>
		<text name="md_lbl_releasedate,md_lbl_developer,md_developer,md_lbl_publisher,md_publisher,md_lbl_genre,md_genre,md_lbl_players,md_players,md_lbl_lastplayed,md_lbl_playcount,md_playcount">
			<visible>false</visible>
		</text>
		<datetime name="md_releasedate,md_lastplayed">
			<visible>false</visible>
		</datetime>
	</customView>
	<include>./gamelistParameters.xml</include>
</theme>
