<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<view name="gamecarousel">
		<image name="logo">
			<pos>0.027 0.14</pos>
			<maxSize>0.16 0.09</maxSize>
			<origin>0 1</origin>
		</image>
		<image name="logo" ifSubset="bigGamecarousel:yes">
			<origin>1 1</origin>
			<pos>0.79 0.14</pos>
		</image>
		<image name="logo" ifSubset="centerGamelistLogos:yes">
			<pos>0.5 0.075</pos>
			<maxSize>0.3 0.13</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		<gamecarousel name="gamecarousel">
			<zIndex>1001</zIndex>
			<type>vertical_wheel</type>
			<transitionSpeed>650</transitionSpeed>
			<origin>0.5 0.5</origin>
            <pos>0.22 0.54</pos>
            <size>0.39 0.78</size>
			<logoScale>3</logoScale>
			<logoSize>0.2 1</logoSize>
			<logoAlignment>center</logoAlignment>
			<maxLogoCount>9</maxLogoCount>
			<imageSource>marquee</imageSource>
			<scrollSound>./sounds/scroll.wav</scrollSound>
            <logoRotation>28</logoRotation>
            <logoRotationOrigin>-1.8 0.54</logoRotationOrigin>
			<origin ifSubset="bigGamecarousel:yes">0 0</origin>
            <size ifSubset="bigGamecarousel:yes">0.42 1</size>
			<logoSize ifSubset="bigGamecarousel:yes">0.36 0.18</logoSize>
			<logoScale ifSubset="bigGamecarousel:yes">2</logoScale>
			<logoRotation ifSubset="bigGamecarousel:yes">18</logoRotation>
			<logoRotationOrigin ifSubset="bigGamecarousel:yes">-2 0.5</logoRotationOrigin>
			<maxLogoCount ifSubset="bigGamecarousel:yes">9</maxLogoCount>
			<pos ifSubset="bigGamecarousel:yes">0 0</pos>
			</gamecarousel>    
		<text name="gamecarouselLogoText">
			<color>${c.textHeader}</color>
            <glowColor>00000080</glowColor>
			<glowOffset>1</glowOffset>
			<lineSpacing>1.0</lineSpacing>
			<fontPath>./fonts/CabinCondensed-Bold.ttf</fontPath>
			<fontSize>0.045</fontSize>
		</text>		
		<image name="md_thumbnail">
			<zIndex>1001</zIndex>
			<origin>1 1</origin>
            <pos>0.96 0.905</pos>
            <maxSize>0.155 0.27</maxSize>
			<roundCorners>0.018</roundCorners>
			<storyboard event="open">
				<animation property="opacity" from="0" mode="linear" duration="120"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" mode="linear" duration="120"/>
				<animation property="offsetY" from="0.005" mode="easeOut" duration="250"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" mode="linear" duration="120"/>
				<animation property="offsetY" from="-0.005" mode="easeOut" duration="250"/>
			</storyboard>
			<storyboard event="deactivateNext">
				<animation property="opacity" to="0" mode="linear" duration="60"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" to="0" mode="linear" duration="60"/>
			</storyboard>
		</image>
        <text name="md_description">
			<color>${c.text}</color>
        </text>
		<image name="frame" extra="true" ifSubset="bigGamecarousel:yes">
			<visible>false</visible>
		</image>
	</view>
</theme>
