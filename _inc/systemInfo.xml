<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<view name="system">
		<text name="systemInfo">
			<zIndex>1000</zIndex>
            <pos>0 0.62</pos>
            <backgroundColor>00000000</backgroundColor>
            <color>${c.text}</color>
			<fontPath>./fonts/Cabin-Regular.ttf</fontPath>
            <fontSize>0.02</fontSize>
            <glowColor>00000080</glowColor>
			<glowOffset>1</glowOffset>
			<glowSize>1</glowSize>
            <opacity>0</opacity>
			<storyboard>
                <animation property="opacity" from="0" to="0" duration="550" mode="easeIn"/>
                <animation property="opacity" from="0" to="1" duration="100" mode="easeIn" begin="550"/>
            </storyboard>
		</text>
		<text name="systemInfo" ifSubset="carousel:vertical|wheel">
			<pos>0.11 0.44</pos>
			<pos ifSubset="randomVideos:inFrame">0.11 0.65</pos>
		</text>
	</view>
</theme>
