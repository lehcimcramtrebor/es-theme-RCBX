<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<view name="system">
		<video name="randomVideo" extra="true">
			<path>{random}</path>
			<path>./../_rcbxCustom/videos/${system.theme}.mp4</path>
			<path ifArch="windows">./../../../../_rcbxCustom/videos/${system.theme}.mp4</path>
			<path ifNotArch="windows">./../../_rcbxCustom/videos/${system.theme}.mp4</path>
			<delay>0.3</delay>
		</video>
		<!--only audio-->
		<video name="randomVideo" extra="true" ifSubset="randomVideos:onlyAudio">
			<zIndex>0</zIndex>
			<size>0 0</size>
			<opacity>0</opacity>			
		</video>
		<!--in frame-->
		<video name="randomVideo" extra="true" ifSubset="randomVideos:inFrame">
			<zIndex>2000</zIndex>
			<maxSize>0.25 0.25</maxSize>
			<opacity>1</opacity>
			<effect>fade</effect>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.2</pos>
			<roundCorners>0.05</roundCorners>
			<shader ifArch="windows" ifSubset="randomShader:yes">:/shaders/dotmask.glsl</shader>
			<color ifSubset="randomShader:no">cccccc</color>
			<!--carousel vertical-->
			<pos ifSubset="carousel:vertical|wheel">0.61 0.5</pos>
			<storyboard>
				<animation property="scale" from="0" to="0" mode="linear" duration="350"/>
				<animation property="scale" from="0" to="1" mode="linear" duration="150" begin="350"/>
			</storyboard>			
		</video>
		<!--on wall-->
		<video name="randomVideo" extra="true" ifSubset="randomVideos:onWall">
			<zIndex>200</zIndex>
			<size>1 1</size>
			<opacity>0.3</opacity>
			<saturation>1.2</saturation>
			<effect>none</effect>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<shader ifArch="windows" ifSubset="randomShader:yes">:/shaders/res-independent-scanlines.glsl</shader>
		</video>
		<!--full screen-->
		<video name="randomVideo" extra="true" ifSubset="randomVideos:fullScreen">
			<zIndex>2000</zIndex>
			<size>1 1</size>
			<opacity>1</opacity>
			<effect>none</effect>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<color>cccccc</color>
			<delay>2</delay>
			<shader ifArch="windows" ifSubset="randomShader:yes">:/shaders/dotmask.glsl</shader>
		</video>
		<video name="randomVideo" extra="true" ifSubset="randomVideosAudio:on">
			<audio>true</audio>
		</video>
		<video name="randomVideo" extra="true" ifSubset="randomVideosAudio:off">
			<audio>false</audio>
		</video>
	</view>
</theme>
