<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<view name="basic">
		<image name="frame" extra="true">
			<tile>true</tile>
			<zIndex>1000</zIndex>
			<path>./parts/${n.frame}.png</path>
			<origin>0.5 0.5</origin>
			<size>0.9 0.78</size>
			<pos>0.5 0.54</pos>
			<color>${c.framePlain}</color>
			<color ifSubset="mode:transparent">${c.frameTransparent}</color>
			<colorEnd ifSubset="mode:transparent">${ce.frameTransparent}</colorEnd>
			<color ifSubset="mode:translucent">${c.frameTranslucent}</color>
			<colorEnd ifSubset="mode:translucent">${ce.frameTranslucent}</colorEnd>
			<gradientType ifSubset="mode:transparent|translucent">vertical</gradientType>
		</image>
		<image name="logo">
			<pos>0.79 0.074</pos>
			<maxSize>0.26 0.11</maxSize>
			<origin>1 0.5</origin>
		</image>
		<text name="systemName" extra="true">
			<zIndex>1000</zIndex>
			<text>${system.fullName}</text>
			<forceUppercase>true</forceUppercase>
			<color>${c.text}</color>
			<fontSize>0.03</fontSize>
			<origin>0 1</origin>
			<pos>0.05 0.15</pos>
			<fontPath>./fonts/Cabin-Bold.ttf</fontPath>
		</text>
		<textlist name="gamelist">
			<zIndex>1001</zIndex>
			<origin>0.5 0.5</origin>
			<size>0.9 0.78</size>
			<pos>0.5 0.54</pos>
			<selectedColor>${c.selected}</selectedColor>
			<primaryColor>${c.text}</primaryColor>
			<secondaryColor>00000000</secondaryColor>
			<selectorColor>${c.menuSelector}</selectorColor>	  		
			<selectorColorEnd>${ce.menuSelector}</selectorColorEnd>	  		
			<fontPath>./fonts/Cabin-Bold.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<alignment>center</alignment>
            <horizontalMargin>0.01</horizontalMargin>
			<forceUppercase>true</forceUppercase>
			<scrollSound>./sounds/scroll.wav</scrollSound>
			<lines>15</lines>
			</textlist>
	</view>
	<include>./gamelistParameters.xml</include>
</theme>
