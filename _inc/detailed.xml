<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<view name="detailed">
		<image name="logo">
			<pos>0.027 0.14</pos>
			<maxSize>0.16 0.09</maxSize>
			<origin>0 1</origin>
		</image>
		<textlist name="gamelist">
			<zIndex>1001</zIndex>
			<origin>0.5 0.5</origin>
            <pos>0.22 0.54</pos>
            <size>0.39 0.78</size>
			<selectedColor>${c.selected}</selectedColor>
			<primaryColor>${c.text}</primaryColor>
			<secondaryColor>00000000</secondaryColor>
			<selectorColor>${c.menuSelector}</selectorColor>	  		
			<selectorColorEnd>${ce.menuSelector}</selectorColorEnd>	  		
			<fontPath>./fonts/Cabin-Bold.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<alignment>left</alignment>
            <horizontalMargin>0.01</horizontalMargin>
			<forceUppercase>true</forceUppercase>
			<scrollSound>./sounds/scroll.wav</scrollSound>
			<lines>15</lines>
		</textlist>
		<image name="md_thumbnail">
			<zIndex>1001</zIndex>
			<origin>1 1</origin>
            <pos>0.96 0.905</pos>
            <maxSize>0.155 0.27</maxSize>
			<storyboard event="open">
				<animation property="opacity" from="0" mode="linear" duration="120"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" mode="linear" duration="120"/>
				<animation property="offsetY" from="0.005" mode="easeOut" duration="250"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" mode="linear" duration="120"/>
				<animation property="offsetY" from="-0.005" mode="easeOut" duration="250"/>
			</storyboard>
			<storyboard event="deactivateNext">
				<animation property="opacity" to="0" mode="linear" duration="60"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" to="0" mode="linear" duration="60"/>
			</storyboard>
		</image>
		<image name="md_marquee">
			<zIndex>1001</zIndex>
			<origin>0.5 0.5</origin>
            <pos>0.63 0.77525</pos>
            <maxSize>0.18 0.255</maxSize>
			<saturation>1.2</saturation>
			<storyboard event="open">
				<animation property="opacity" from="0" to="1" mode="easeOut" duration="250"/>
				<animation property="opacity" to="0" mode="easeIn" duration="250" begin="550"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="1" mode="easeOut" duration="250"/>
				<animation property="offsetX" from="0.05" mode="easeOutCubic" duration="250"/>
				<animation property="opacity" to="0" mode="easeIn" duration="250" begin="550"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="1" mode="easeOut" duration="250"/>
				<animation property="offsetX" from="-0.05" mode="easeOutCubic" duration="250"/>
				<animation property="opacity" to="0" mode="easeIn" duration="250" begin="550"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" to="0" mode="linear" duration="1"/>
			</storyboard>
			<storyboard event="deactivateNext">
				<animation property="opacity" to="0" mode="linear" duration="1"/>
			</storyboard>
		</image>
        <text name="md_description">
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" mode="linear" duration="650"/>
				<animation property="opacity" from="0" to="1" mode="easeIn" duration="300" begin="650"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" mode="linear" duration="650"/>
				<animation property="opacity" from="0" to="1" mode="easeIn" duration="300" begin="650"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" mode="linear" duration="650"/>
				<animation property="opacity" from="0" to="1" mode="easeIn" duration="300" begin="650"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" to="0" mode="linear" duration="1"/>
			</storyboard>
			<storyboard event="deactivateNext">
				<animation property="opacity" to="0" mode="linear" duration="1"/>
			</storyboard>
        </text>
	</view>
	<include>./gamelistParameters.xml</include>
</theme>
