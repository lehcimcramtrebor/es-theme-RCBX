<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<view name="detailed">
		<image name="logo">
			<pos>0.027 0.14</pos>
			<maxSize>0.16 0.09</maxSize>
			<origin>0 1</origin>
		</image>
		<image name="logo" ifSubset="centerGamelistLogos:yes">
			<pos>0.5 0.075</pos>
			<maxSize>0.3 0.13</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		<textlist name="gamelist">
            <glowColor>00000080</glowColor>
			<glowOffset>1</glowOffset>
			<glowSize>1</glowSize>
			<zIndex>1001</zIndex>
			<origin>0.5 0.5</origin>
            <pos>0.22 0.54</pos>
            <size>0.39 0.78</size>
			<selectedColor>${c.selected}</selectedColor>
			<primaryColor>${c.text}</primaryColor>
			<secondaryColor>${c.text}</secondaryColor>
			<selectorColor>${c.menuSelector}</selectorColor>	  		
			<selectorColorEnd>${ce.menuSelector}</selectorColorEnd>	  		
			<selectorImagePath>./parts/selector.png</selectorImagePath>	  		
			<fontPath>./fonts/Cabin-Bold.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<alignment>left</alignment>
            <horizontalMargin>0.01</horizontalMargin>
			<forceUppercase>true</forceUppercase>
			<scrollSound>./sounds/scroll.wav</scrollSound>
			<scrollSound>./../_rcbxCustom/scrollSounds/gamelist.wav</scrollSound>
			<scrollSound>./../_rcbxCustom/scrollSounds/${system.theme}.wav</scrollSound>
			<scrollSound ifArch="windows">./../../../../../_rcbxCustom/scrollSounds/gamelist.wav</scrollSound>
			<scrollSound ifArch="windows">./../../../../../_rcbxCustom/scrollSounds/${system.theme}.wav</scrollSound>
			<scrollSound ifNotArch="windows">./../../../_rcbxCustom/scrollSounds/gamelist.wav</scrollSound>
			<scrollSound ifNotArch="windows">./../../../_rcbxCustom/scrollSounds/${system.theme}.wav</scrollSound>
			<lines>15</lines>
		</textlist>
		<image name="gridLineLeft,gridLineRight" extra="true" ifSubset="gamelistFrames:fullScreen|yes">
			<zIndex>1002</zIndex>
			<path>./parts/plain.png</path>
            <size>0.002 0.78</size>
			<opacity>0.05</opacity>
			<gradientType>horizontal</gradientType>
			<color>00000000</color>
			<colorEnd>${c.text}</colorEnd>
		</image>
		<image name="gridLineLeft" extra="true" ifSubset="gamelistFrames:fullScreen|yes">
			<origin>0.5 0.5</origin>
			<pos>0.025 0.54</pos>
			<visible ifSubset="gamelistFrames:yes">false</visible>
		</image>
		<image name="gridLineRight" extra="true" ifSubset="gamelistFrames:fullScreen|yes">
			<origin>0.5 0.5</origin>
			<pos>0.415 0.54</pos>
		</image>
		<image name="md_thumbnail">
			<default>./parts/noThumb.png</default>
			<zIndex>1001</zIndex>
			<origin>0.5 0.5</origin>
            <pos>0.88 0.755</pos>
            <pos ifSubset="gamelistFrames:fullScreen">0.886 0.785</pos>
            <maxSize>0.155 0.3</maxSize>
			<reflexion>0.01 0</reflexion>
			<roundCorners>0.018</roundCorners>
			<storyboard event="open" repeatAt="5000">
				<animation property="opacity" from="0" mode="linear" duration="120"/>
				<animation property="offsetY" to="-0.025" mode="easeOutCubic" autoreverse="true" duration="250" begin="5000"/>
				<animation property="opacity" from="1" to="1" mode="linear" duration="9500" begin="5500"/>
			</storyboard>
			<storyboard event="activateNext" repeatAt="5000">
				<animation property="opacity" from="0" mode="linear" duration="120"/>
				<animation property="offsetY" from="0.005" mode="easeOut" duration="250"/>
				<animation property="offsetY" to="-0.025" mode="easeOutCubic" autoreverse="true" duration="250" begin="5000"/>
				<animation property="opacity" from="1" to="1" mode="linear" duration="9500" begin="5500"/>
			</storyboard>
			<storyboard event="activatePrev" repeatAt="5000">
				<animation property="opacity" from="0" mode="linear" duration="120"/>
				<animation property="offsetY" from="-0.005" mode="easeOut" duration="250"/>
				<animation property="offsetY" to="-0.025" mode="easeOutCubic" autoreverse="true" duration="250" begin="5000"/>
				<animation property="opacity" from="1" to="1" mode="linear" duration="9500" begin="5500"/>
			</storyboard>
			<storyboard event="deactivateNext">
				<animation property="opacity" to="0" mode="linear" duration="60"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" to="0" mode="linear" duration="60"/>
			</storyboard>
		</image>
		<image name="md_marquee">
			<zIndex>1001</zIndex>
			<origin>0.5 0.5</origin>
            <pos>0.63 0.77525</pos>
            <maxSize>0.18 0.255</maxSize>
			<saturation>1.2</saturation>
			<color>00000000</color>
			<reflexion>0.01 0</reflexion>
			<storyboard event="open">
				<animation property="color" to="ffffff" mode="linear" duration="1"/>
				<animation property="opacity" from="0" to="1" mode="easeOut" duration="250"/>
				<animation property="opacity" to="0" mode="easeIn" duration="250" begin="750"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="color" to="ffffff" mode="linear" duration="1"/>
				<animation property="opacity" from="0" to="1" mode="easeOut" duration="250"/>
				<animation property="offsetX" from="0.05" mode="easeOutCubic" duration="250"/>
				<animation property="opacity" to="0" mode="easeIn" duration="250" begin="750"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="color" to="ffffff" mode="linear" duration="1"/>
				<animation property="opacity" from="0" to="1" mode="easeOut" duration="250"/>
				<animation property="offsetX" from="-0.05" mode="easeOutCubic" duration="250"/>
				<animation property="opacity" to="0" mode="easeIn" duration="250" begin="750"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" to="0" mode="linear" duration="1"/>
			</storyboard>
			<storyboard event="deactivateNext">
				<animation property="opacity" to="0" mode="linear" duration="1"/>
			</storyboard>
		</image>
        <text name="md_description">
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" mode="linear" duration="850"/>
				<animation property="opacity" from="0" to="1" mode="easeIn" duration="300" begin="850"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" mode="linear" duration="850"/>
				<animation property="opacity" from="0" to="1" mode="easeIn" duration="300" begin="850"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" mode="linear" duration="850"/>
				<animation property="opacity" from="0" to="1" mode="easeIn" duration="300" begin="850"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" to="0" mode="linear" duration="1"/>
			</storyboard>
			<storyboard event="deactivateNext">
				<animation property="opacity" to="0" mode="linear" duration="1"/>
			</storyboard>
        </text>
	</view>

	<!--free up space-->
