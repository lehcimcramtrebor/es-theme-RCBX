			<primaryColor>${c.text}cc</primaryColor>
			<secondaryColor>${c.text}cc</secondaryColor>
			<selectorImagePath ifSubset="freeFanart:no">./parts/selectorFree.png</selectorImagePath>	  		
            <horizontalMargin>0.01</horizontalMargin>
		</textlist>
	</view>

