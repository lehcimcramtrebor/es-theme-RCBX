<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<view name="screen">
		<controllerActivity name="controllerActivity">
			<pos>0.01 0.012</pos>
			<size>0.185 0.023</size>
			<itemSpacing>0.003</itemSpacing>
			<color>${c.text}</color>
			<activityColor>${c.textHeader}</activityColor>
			<hotkeyColor>ff3030</hotkeyColor>

			<imagePath>./controllerActivity/gamepad.svg</imagePath>
			<itemSpacing>0.003</itemSpacing>

			<imagePath ifSubset="controller:player">./controllerActivity/player.svg</imagePath>
			<itemSpacing ifSubset="controller:player">-0.003</itemSpacing>

			<imagePath ifSubset="controller:stick">./controllerActivity/stick.svg</imagePath>
			<itemSpacing ifSubset="controller:stick">-0.002</itemSpacing>

			<imagePath ifSubset="controller:nes">./controllerActivity/nes.svg</imagePath>
			<itemSpacing ifSubset="controller:nes">0.012</itemSpacing>

			<imagePath ifSubset="controller:snes">./controllerActivity/snes.svg</imagePath>
			<itemSpacing ifSubset="controller:snes">0.014</itemSpacing>

			<imagePath ifSubset="controller:megadrive">./controllerActivity/megadrive.svg</imagePath>
			<itemSpacing ifSubset="controller:megadrive">0.008</itemSpacing>

			<imagePath ifSubset="controller:megadrive6">./controllerActivity/megadrive6.svg</imagePath>
			<itemSpacing ifSubset="controller:megadrive6">0.01</itemSpacing>

			<imagePath ifSubset="controller:n64">./controllerActivity/n64.svg</imagePath>
			<itemSpacing ifSubset="controller:n64">0.002</itemSpacing>

			<imagePath ifSubset="controller:cube">./controllerActivity/cube.svg</imagePath>
			<itemSpacing ifSubset="controller:cube">0.004</itemSpacing>

			<imagePath ifSubset="controller:xbox">./controllerActivity/xbox.svg</imagePath>
			<itemSpacing ifSubset="controller:xbox">0.005</itemSpacing>

			<imagePath ifSubset="controller:psx">./controllerActivity/psx.svg</imagePath>
			<itemSpacing ifSubset="controller:psx">0.007</itemSpacing>

			<imagePath ifSubset="controller:ps4">./controllerActivity/ps4.svg</imagePath>
			<itemSpacing ifSubset="controller:ps4">0.006</itemSpacing>

			<imagePath ifSubset="controller:ps5">./controllerActivity/ps5.svg</imagePath>
			<itemSpacing ifSubset="controller:ps5">0.006</itemSpacing>

			<gunPath>./controllerActivity/gun.svg</gunPath>

			<color tinyScreen="true" ifSubset="tiny:handheld">00000000</color>
			<activityColor tinyScreen="true" ifSubset="tiny:handheld">00000000</activityColor>
			<hotkeyColor tinyScreen="true" ifSubset="tiny:handheld">00000000</hotkeyColor>
		</controllerActivity>
	</view>
</theme>
